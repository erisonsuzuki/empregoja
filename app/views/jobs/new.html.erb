<div id="form-body">
  <% if flash[:notice ] %>
    <div class="message">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <%= form_for @job do |f| %>
    <%= f.label :title, 'Título' %>
    <%= f.text_field :title %>

    <%= f.label :location, 'Local' %>
    <%= f.text_field :location %>

    <%= f.label :category, 'Categoria' %>
    <%= f.text_field :category %>

    <%= f.label :company_id, 'Empresa' %>
    <%= f.collection_select(:company_id, @companies, :id, :name, { prompt: true }) %>

    <%= f.label :description, 'Descrição' %>
    <%= f.text_field :description %>

    <%= f.label :featured, 'Destaque' %>
    <%= f.check_box :featured %>

    <%= f.submit 'Criar Vaga' %>
  <% end %>
</div>
