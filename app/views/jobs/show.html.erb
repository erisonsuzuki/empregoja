<div id="job-body">
  <section class="job">
    <% if @job.featured %>
      <div class="highlight">
        <strong>Destaque</strong>
      </div>
    <% end %>

    <h1><%= @job.title %></h1>

    <p>
      <strong>Categoria</strong>
      <%= @job.category.name %>
    </p>
    <p>
      <strong>Empresa</strong>
      <%= @job.company.name %>
    </p>
    <p>
      <strong>Descrição</strong>
      <%= @job.description %>
    </p>
    <p>
      <strong>Localização</strong>
      <%= @job.location %>
    </p>
  </section>

  <% if @job.expired? %>
    <div class="message">
      <strong>Vaga Expirada</strong>
    </div>
  <% end %>
</div>

<%= link_to 'Voltar', root_path %>