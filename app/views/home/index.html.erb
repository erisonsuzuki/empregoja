<div id="home-body">
  <% @jobs.each do |job| %>
    <h1><%= link_to job.title, job %></h1>
    <p><%= job.company.name %></p>
    <p><%= job.location %></p>

    <% if job.featured %>
      <strong>Destaque</strong>
    <% end %>
  <% end %>
</div>

<aside>
	<ul>

    <% @companies.each do |company| %>
      <li><%= link_to company.name, company %></li>
    <% end %>

  </ul>

  <ul>

		<% @categories.each do |category| %>
	    <li><%= link_to category.name, category %></li>
		<% end %>

	</ul>
</aside>