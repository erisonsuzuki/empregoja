<div id="home-body" class="page">
  <section id="jobs">
    <%= render @jobs %>
  </section>

  <aside>
    <h2>Empresas</h2>
  	<ul>

      <% @companies.each do |company| %>
        <li><%= link_to company.name, company %></li>
      <% end %>

    </ul>

    <h2>Categorias</h2>
    <ul>

  		<% @categories.each do |category| %>
  	    <li><%= link_to category.name, category %></li>
  		<% end %>

  	</ul>
  </aside>
</div>
